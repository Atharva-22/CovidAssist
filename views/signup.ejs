      <h1 class="u-align-center u-custom-font u-font-montserrat u-text u-text-1">Sign Up</h1>
      <div class="u-align-center u-form u-form-1">
        <form action="/signup" method="POST" style="padding: 33px;" autocomplete="off" source="custom" name="form">

          <div class="grid-container-v">
            <div class="grid-container-h">
              <!--State-->
              <div class="u-form-group u-form-partition-factor-2 u-form-select u-form-group-1">
                <div class="u-form-select-wrapper">
                  <select id="stateSel" name="select1"
                    class="u-border-1 u-border-grey-30 u-grey-5 u-input u-input-rectangle u-radius-18 u-input-1">
                    <option value="Select State">Select State</option>
                  </select>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret">
                    <path fill="currentColor" d="M4 8L0 4h8z"></path>
                  </svg>
                </div>
              </div>

              <!-- District -->
              <div class="u-form-group u-form-partition-factor-2 u-form-select u-form-group-2">
                <label for="select-20af"
                  class="u-custom-font u-font-montserrat u-form-control-hidden u-label u-label-2">Select</label>
                <div class="u-form-select-wrapper">
                  <select id="districtSel" name="select2"
                    class="u-border-1 u-border-grey-30 u-grey-5 u-input u-input-rectangle u-radius-18 u-input-2">
                    <option value="Select City/Town">Select District</option>
                  </select>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" version="1" class="u-caret">
                    <path fill="currentColor" d="M4 8L0 4h8z"></path>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Hospital Name -->
            <div class="u-form-group u-form-name u-form-group-3">
              <input type="text" placeholder="Hospital Name" id="hosname" name="hospitalName"
                class="u-border-1 u-border-grey-30 u-grey-5 u-input u-input-rectangle u-radius-18 u-input-3"
                required="">
            </div>

            <!-- Hospital ID -->
            <div class="u-form-group u-form-group-4">
              <input type="text" placeholder="Hospital ID" id="hosid" name="username"
                class="u-border-1 u-border-grey-30 u-grey-5 u-input u-input-rectangle u-radius-18 u-input-4"
                required="required">
            </div>

            <!-- Hospital Contact -->
            <div class="u-form-group u-form-group-5">
              <input type="text" min="0" size="12" maxlength="12" placeholder="Contact Number" id="hoscon"
                name="contactno"
                class="u-border-1 u-border-grey-30 u-grey-5 u-input u-input-rectangle u-radius-18 u-input-4"
                required="required">
            </div>



            <!-- Address -->
            <div class="u-form-group u-form-group-6">
              <input type="textarea" id="Address" name="address" max="40"
                class="u-border-1 u-border-grey-30 u-grey-5 u-input u-input-rectangle u-radius-18 u-input-5"
                required="required" placeholder="Address">
            </div>
            <!-- PinCode -->
            <div class="u-form-group u-form-group-5">
              <input type="number" min="0" size="12" maxlength="12" placeholder="Pincode" id="pincode" name="pincode"
                class="u-border-1 u-border-grey-30 u-grey-5 u-input u-input-rectangle u-radius-18 u-input-4"
                required="required">
            </div>



            <!-- Password -->
            <div class="u-form-group u-form-group-7">
              <input type="password" id="password" name="password"
                class="u-border-1 u-border-grey-30 u-grey-5 u-input u-input-rectangle u-radius-18 u-input-5"
                required="required" placeholder="Password">
            </div>
          </div>

          <div class="u-align-center u-form-group u-form-submit">
